<h1 class="mt-3">Messages#index</h1>
<%= turbo_stream_from :messagebox %>

<%= turbo_frame_tag :messagebox do %>
  <% @messages.each do |message| %>
    <%= render "messages/message", message: message %>
  <% end %>

  <% if @messages.empty? %>
    There are no messages
  <% else %>
    <p class="text-center">
      <%= link_to 'More', messages_index_path(last: @messages.last[:id]), class: 'btn btn-primary w-100 mt-3' %>
    </p>
  <% end %>
<% end %>